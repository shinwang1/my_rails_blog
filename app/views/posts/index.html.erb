<h1 id="page_title">My Blog</h1>

<div id="posts_wrapper" class="skinny_wrapper">
  <% @posts.each do |post| %>
    <div class="post">
      <p class="date"><%= post.date %></p>
      <h2><a href="#"><%= link_to post.title, post %></a></h2>
      <hr>
    </div>
  <% end %>
</div>

<%= will_paginate @posts %>